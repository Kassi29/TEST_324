@model tres.Models.Transaccion

@{
    ViewData["Title"] = "Edit";
}



<h4>Editar Transaccion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idtransaccion" />
            <div class="form-group">
                <label asp-for="CuentaOrigen" class="control-label"></label>
                <select asp-for="CuentaOrigen" class="form-control" asp-items="ViewBag.CuentaOrigen"></select>
                <span asp-validation-for="CuentaOrigen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuentaDestino" class="control-label"></label>
                <select asp-for="CuentaDestino" class="form-control" asp-items="ViewBag.CuentaDestino"></select>
                <span asp-validation-for="CuentaDestino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
