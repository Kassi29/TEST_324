@model IEnumerable<tres.Models.Cuentum>

@{
    ViewData["Title"] = "Cuenta";
}

<h1>Cuenta</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Saldo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                ID Cliente
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdclienteNavigation.Idpersona)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning"  asp-route-id="@item.Idcuenta">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary"  asp-route-id="@item.Idcuenta">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Idcuenta">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
